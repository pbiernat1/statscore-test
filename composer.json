{
    "name": "recruitment/football-events",
    "description": "Simple football events tracking application",
    "type": "project",
    "require": {
        "php": ">=8.4",
        "ext-json": "*",
        "slim/slim": "^4.15",
        "slim/psr7": "^1.8",
        "php-di/php-di": "^7.1",
        "monolog/monolog": "^3.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "codeception/codeception": "^5.0",
        "codeception/module-phpbrowser": "*",
        "codeception/module-asserts": "*",
        "codeception/module-rest": "^3.4",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "vendor/bin/phpunit"
    }
}
